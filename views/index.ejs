<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/homepage.css">
    <title>Book List</title>
    <style>
        .card-img-top {
            height: 200px; /* Reduce the height to make images smaller */
            object-fit: cover;
        }
        .card {
            max-width: 200px; /* Reduce the card width */
        }
    </style>
</head>
<body class="body">
    <%- include('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h1 class="mb-4">Book List</h1>
        <div class="row justify-content-center">
            <% books.forEach(book => { %>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
                    <div class="card">
                        <img src="../images/<%= book.image %>" class="card-img-top" alt="<%= book.title %>">
                        <div class="card-body">
                            <h5 class="card-name"><%= book.name %></h5>
                            <p class="card-text">Written by <%= book.author %></p>
                            <a href="/books/<%= book.bookid %>" class="btn btn1">View More</a>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/updateBooks/<%= book.bookid %>" class=" btn btn2">Edit</a>
                            <a href="/deleteBooks/<%= book.bookid %>" class="btn btn3">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
